bg-image($url)
  background-image: url($url)
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio: 3)
    background-image: url($url)
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: normal
extend-click()
  position: relative
  &:before
    content: ""
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
